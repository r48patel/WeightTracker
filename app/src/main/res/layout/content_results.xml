<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rpatel.weighttracker.ResultsActivity"
    tools:showIn="@layout/activity_results">

    <!--<TextView-->
        <!--android:id="@+id/Results_resultsTextView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="@dimen/text_margin"-->
        <!--android:text="@string/results_test" />-->


    <TableLayout
        android:id="@+id/Results_TableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow
            android:id="@+id/Results_Header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_alpha_12"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/Results_DateHeaderTextView"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:width="0dp"
                android:text="Date"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/Results_WeightTextView"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:width="0dp"
                android:text="Weight"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/Results_FatTextVIew"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:width="0dp"
                android:text="Fat %"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/Results_BodyWaterTextView"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:width="0dp"
                android:text="Percent Body Water"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/Results_BodyMusclesTextView"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:width="0dp"
                android:text="Percent Body Muscle"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/Results_BoneMassTextView"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:width="0dp"
                android:text="Bone Mass"
                android:textAlignment="center" />

        </TableRow>
    </TableLayout>
</android.support.v4.widget.NestedScrollView>
