<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:id="@+id/Results_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/Results_row_DateTextView"
            android:layout_height="wrap_content"
            android:layout_weight="18"
            android:width="15dp"
            android:paddingRight="8dp"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Results_row_TimeTextView"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:width="5dp"
            android:text="Time"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Results_row_WeightTextView"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:width="0dp"
            android:text="Weight"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Results_row_FatTextVIew"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:width="0dp"
            android:text="Fat %"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Results_row_BodyMusclesTextView"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:width="0dp"
            android:text="% Body Muscle"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Results_row_BoneMassTextView"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:width="0dp"
            android:text="Bone Mass"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/Results_row_BodyWaterTextView"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:width="0dp"
            android:text="% Body Water"
            android:textAlignment="center" />
    </TableRow>

</merge>
